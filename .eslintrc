{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "jest": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": "off",
    "max-len": ["error", {"code": 100, "ignoreUrls": true}],
    "comma-dangle": ["error", "always-multiline"],
    "no-param-reassign": "off"
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": [
    "jest"
  ],
  "globals": {
    "ServerlessWrapper": false
  }
}
